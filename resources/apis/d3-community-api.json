    },
    "D3 Item API": {
      "methods": {
        "getItem": {
          "description": "Returns a single item by item slug and ID.",
          "httpMethod": "GET",
          "path": "/d3/data/item/{itemSlugAndId}",
          "parameters": {
            "{itemSlugAndId}": {
              "description": "The slug and ID of the item to retrieve.",
              "required": true,
              "type": "string",
              "default": "corrupted-ashbringer-Unique_Sword_2H_104_x1",
              "location": "pathReplace"
            },
            "locale": {
              "description": "The locale to reflect in localized data.",
