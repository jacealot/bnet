            },
            "locale": {
              "description": "The locale to reflect in localized data.",
              "required": false,
              "type": "string",
              "default": "en_US",
              "location": "query"
            }
          }
        },
        "getApiSkill": {
          "description": "Returns a single skill by slug for a specific character class.",
          "httpMethod": "GET",
          "path": "/d3/data/hero/{classSlug}/skill/{skillSlug}",
          "parameters": {
            "{classSlug}": {
              "description": "The slug of the character class to retrieve.",
              "required": true,
              "type": "string",
              "default": "barbarian",
