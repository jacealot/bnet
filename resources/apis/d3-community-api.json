            },
            "{skillSlug}": {
              "description": "The slug of the skill to retrieve.",
              "required": true,
              "type": "string",
              "default": "bash",
              "location": "pathReplace"
            },
            "locale": {
              "description": "The locale to reflect in localized data.",
              "required": false,
              "type": "string",
              "default": "en_US",
              "location": "query"
            }
          }
        }
      }
    },
    "D3 Item Type API": {
      "methods": {
        "getItemTypeIndex": {
          "description": "Returns an index of item types.",
          "httpMethod": "GET",
          "path": "/d3/data/item-type",
