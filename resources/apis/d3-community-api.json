    "D3 Profile API": {
      "methods": {
        "getApiAccount": {
          "description": "Returns the specified account profile.",
          "httpMethod": "GET",
          "path": "/d3/profile/{account}/",
          "parameters": {
            "{account}": {
              "description": "The BattleTag for the account to retrieve.",
